[user]
  name = Damian Caruso
  email = damian.caruso@gmail.com
[color]
  ui = true
[alias]
  st = status -sb
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log --graph --pretty=format:'%Cred%h%Creset %Cgreen[%cr]%Creset (%an) %s%Creset %C(yellow)%d%Creset' --abbrev-commit --date=relative
  count = shortlog -sn
  unstage = reset HEAD
[push]
  default = simple
[diff]
  # For Github-style word diffs
  wordRegex = [^[:space:]]
[apply]
  whitespace = nowarn
[format]
  pretty = %Cblue%h%Creset %Cgreen[%ar]%Creset (%an) %s
[rebase]
  autosquash = true
[core]
  editor = vim
